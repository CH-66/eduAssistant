/* pages/grades/grades.wxss */
.container {
  padding: 20rpx;
}

.score-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.score-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  border: 1px solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx 0 rgba(31, 38, 135, 0.07);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.score-item:hover {
  transform: translateY(-6rpx);
  box-shadow: 0 20rpx 40rpx 0 rgba(31, 38, 135, 0.1);
}

.course-name {
  font-size: 32rpx;
  color: #333;
}

.score {
  font-size: 36rpx;
  font-weight: bold;
}

.text-success {
  color: #07c160;
}