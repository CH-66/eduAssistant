.binding-form {
  padding: 30px 20px;
  background-color: #fff;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  margin: 20px;
}

.form-header {
  text-align: center;
  margin-bottom: 40px;
}

.form-logo {
  width: 80px;
  height: 80px;
  margin-bottom: 16px;
}

.form-title {
  display: block;
  font-size: 24px;
  font-weight: bold;
  color: #333;
  margin-bottom: 8px;
}

.form-subtitle {
  display: block;
  font-size: 14px;
  color: #666;
}

.form-group {
  margin-bottom: 30px;
}

.input-group {
  position: relative;
  margin-bottom: 20px;
  display: flex;
  align-items: center;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  padding: 4px 12px;
  transition: all 0.3s ease;
}

.input-group:focus-within {
  border-color: #07c160;
  box-shadow: 0 0 0 2px rgba(7, 193, 96, 0.1);
}

.input-icon {
  width: 24px;
  height: 24px;
  margin-right: 8px;
}

.input-icon image {
  width: 100%;
  height: 100%;
  opacity: 0.6;
}

.input-field {
  flex: 1;
  height: 44px;
  border: none;
  background: none;
  font-size: 16px;
  color: #333;
}

.input-field::placeholder {
  color: #999;
}

.bind-button {
  width: 100%;
  height: 48px;
  line-height: 48px;
  background-color: #07c160;
  color: #fff;
  font-size: 16px;
  font-weight: 500;
  border-radius: 24px;
  margin-bottom: 20px;
  transition: all 0.3s ease;
}

.bind-button-hover {
  background-color: #06ae56;
  transform: translateY(-1px);
}

.privacy-container {
  display: flex;
  align-items: center;
  justify-content: center;
}

.privacy-icon {
  width: 16px;
  height: 16px;
  margin-right: 6px;
  opacity: 0.5;
}

.privacy-tip {
  font-size: 12px;
  color: #999;
}

.announcement-bar {
  margin: 16px;
  padding: 12px;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
}

.announcement-icon {
  width: 24px;
  height: 24px;
  margin-right: 12px;
}

.announcement-icon image {
  width: 100%;
  height: 100%;
}

.announcement-text {
  flex: 1;
  font-size: 14px;
  color: #333;
  line-height: 1.4;
}

.today-schedule {
  margin: 16px;
  padding: 16px;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 16px;
  display: block;
}

.schedule-item {
  padding: 12px;
  border-radius: 6px;
  background-color: #f8f8f8;
  margin-bottom: 12px;
}

.schedule-item.current {
  background-color: #e8f5e9;
  border-left: 4px solid #07c160;
}

.course-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.course-name {
  font-size: 16px;
  color: #333;
  font-weight: 500;
}

.course-time {
  font-size: 14px;
  color: #666;
}

.location {
  font-size: 14px;
  color: #666;
}

.empty-schedule {
  text-align: center;
  padding: 24px 0;
  color: #999;
}

.menu-grid {
  padding: 16px;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16px;
}

.menu-item {
  background-color: #fff;
  border-radius: 12px;
  padding: 16px;
  display: flex;
  align-items: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.menu-item:active {
  transform: scale(0.98);
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
}

.menu-item image {
  width: 32px;
  height: 32px;
  margin-right: 12px;
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  margin-bottom: 4px;
  display: block;
}

.menu-description {
  font-size: 12px;
  color: #666;
  display: block;
  line-height: 1.4;
}

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 20px;
}

.login-tips {
  text-align: center;
  padding: 40px 20px;
  color: #666;
}