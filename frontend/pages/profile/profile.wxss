/* pages/profile/profile.wxss */
.container {
  padding: 20rpx;
}

.profile-header {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.avatar-container {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx);
  border: 1px solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx 0 rgba(31, 38, 135, 0.07);
}

.avatar {
  width: 100%;
  height: 100%;
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  border: 1px solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx 0 rgba(31, 38, 135, 0.07);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.info-item:hover {
  transform: translateY(-6rpx);
  box-shadow: 0 20rpx 40rpx 0 rgba(31, 38, 135, 0.1);
}

.info-label {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
}

.info-value {
  font-size: 28rpx;
  color: #333;
}