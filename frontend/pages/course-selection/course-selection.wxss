/* pages/course-selection/course-selection.wxss */
.container {
  padding: 20rpx;
}

.search-bar {
  position: relative;
  margin-bottom: 20rpx;
}

.search-bar input {
  width: 100%;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx);
  border-radius: 40rpx;
  border: 1px solid rgba(255, 255, 255, 0.3);
  padding: 0 80rpx 0 30rpx;
  font-size: 28rpx;
  box-shadow: 0 8rpx 32rpx 0 rgba(31, 38, 135, 0.07);
}

.search-bar icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
}

.filter-bar {
  display: flex;
  margin-bottom: 20rpx;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx);
  border-radius: 40rpx;
  border: 1px solid rgba(255, 255, 255, 0.3);
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx 0 rgba(31, 38, 135, 0.07);
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}

.filter-item.active {
  background: #07c160;
  color: #fff;
}

.course-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.course-item {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 30rpx;
  border: 1px solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx 0 rgba(31, 38, 135, 0.07);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.course-item:hover {
  transform: translateY(-6rpx);
  box-shadow: 0 20rpx 40rpx 0 rgba(31, 38, 135, 0.1);
}

.course-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.course-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.course-credits {
  font-size: 28rpx;
  color: #07c160;
  font-weight: bold;
}

.course-info {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.info-label {
  color: #666;
  width: 100rpx;
}

.info-value {
  color: #333;
  flex: 1;
}

.course-actions {
  display: flex;
  justify-content: flex-end;
}

.select-btn {
  background: #fff;
  color: #07c160;
  border: 1px solid #07c160;
  border-radius: 30rpx;
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.select-btn.selected {
  background: #07c160;
  color: #fff;
}

.selected-courses-summary {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  padding: 20rpx;
  border-top: 1px solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 -8rpx 32rpx 0 rgba(31, 38, 135, 0.07);
}

.summary-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.submit-btn {
  background: #07c160;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
}